<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditNodeArrowDialog">


    <RadioGroup
        android:id="@+id/rg_edit_node_arrow_dialog_vt"
        android:layout_width="113dp"
        android:layout_height="63dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_edit_node_arrow_dialog_salvar"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_node_arrow_dialog_cabecalho"
        tools:layout_editor_absoluteX="0dp">

        <RadioButton
            android:id="@+id/rb_edit_node_arrow_dialog_tempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempo"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="126dp" />

        <RadioButton
            android:id="@+id/rb_edit_node_arrow_dialog_velocidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Velocidade"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="126dp" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_edit_node_arrow_dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="Cancelar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_edit_node_arrow_dialog_valor" />

    <Button
        android:id="@+id/btn_edit_node_arrow_dialog_salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:text="Salvar"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit_node_arrow_dialog_cancel"
        app:layout_constraintTop_toBottomOf="@+id/et_edit_node_arrow_dialog_valor" />

    <TextView
        android:id="@+id/tv_edit_node_arrow_dialog_medida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="m/s"
        app:layout_constraintStart_toEndOf="@+id/et_edit_node_arrow_dialog_valor"
        tools:layout_editor_absoluteY="126dp" />

    <EditText
        android:id="@+id/et_edit_node_arrow_dialog_valor"
        android:layout_width="138dp"
        android:layout_height="39dp"
        android:layout_marginStart="52dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/rg_edit_node_arrow_dialog_vt"
        tools:layout_editor_absoluteY="106dp" />

    <TextView
        android:id="@+id/tv_edit_node_arrow_dialog_cabecalho"
        android:layout_width="329dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

</android.support.constraint.ConstraintLayout>