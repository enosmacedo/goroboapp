<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditNodeDialog">


    <RadioGroup
        android:id="@+id/rg_edit_node_arrow_dialog_vt"
        android:layout_width="166dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_edit_node_arrow_dialog_cabecalho"
        app:layout_constraintStart_toStartOf="@+id/tv_edit_node_arrow_dialog_cabecalho"
        app:layout_constraintTop_toBottomOf="@+id/et_edit_node_arrow_dialog_valor">

        <RadioButton
            android:id="@+id/rb_edit_node_arrow_dialog_velocidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Velocidade (m/s)"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="126dp" />

        <RadioButton
            android:id="@+id/rb_edit_node_arrow_dialog_tempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tempo (s)"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="126dp" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_edit_node_arrow_dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Cancelar"
        app:layout_constraintEnd_toEndOf="@+id/tv_edit_node_arrow_dialog_cabecalho"
        app:layout_constraintTop_toBottomOf="@+id/rg_edit_node_arrow_dialog_vt" />

    <Button
        android:id="@+id/btn_edit_node_arrow_dialog_salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="Salvar"
        app:layout_constraintStart_toStartOf="@+id/tv_edit_node_arrow_dialog_cabecalho"
        app:layout_constraintTop_toBottomOf="@+id/rg_edit_node_arrow_dialog_vt" />

    <EditText
        android:id="@+id/et_edit_node_arrow_dialog_valor"
        android:layout_width="196dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/tv_edit_node_arrow_dialog_cabecalho"
        app:layout_constraintStart_toStartOf="@+id/tv_edit_node_arrow_dialog_cabecalho"
        app:layout_constraintTop_toBottomOf="@+id/et_edit_node_arrow_dialog_titulo" />

    <TextView
        android:id="@+id/tv_edit_node_arrow_dialog_cabecalho"
        android:layout_width="329dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_edit_node_arrow_dialog_titulo"
        android:layout_width="325dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="TÃ­tulo (ID)"
        app:layout_constraintEnd_toEndOf="@+id/tv_edit_node_arrow_dialog_cabecalho"
        app:layout_constraintStart_toStartOf="@+id/tv_edit_node_arrow_dialog_cabecalho"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_node_arrow_dialog_cabecalho" />

</androidx.constraintlayout.widget.ConstraintLayout>